		<maxMobilityDuration>300</maxMobilityDuration>
		<battery>true</battery>
		<percentage>40</percentage>
		<batteryCapacity>15.4</batteryCapacity>
		<initialBatteryLevel>100</initialBatteryLevel>
		<idleConsumption>0.6</idleConsumption>
		<maxConsumption>5.5</maxConsumption>
		<isOrchestrator>false</isOrchestrator>
		<generateTasks>true</generateTasks>
		<cores>4</cores>
		<mips>4000</mips>
		<ram>4000</ram>
		<storage>64000</storage>
	</device>
